<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NewsItemText">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">left|start</item>
    </style>

    <style name="NewsHeadline" parent="NewsItemText">
        <item name="android:textSize">@dimen/news_headline_text_size</item>
        <item name="android:typeface">serif</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="NewsContent" parent="NewsItemText">
        <item name="android:textSize">@dimen/news_content_text_size</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="NewsReadMore" parent="NewsItemText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/news_read_more_text_size</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@android:color/holo_blue_bright</item>
    </style>

</resources>
